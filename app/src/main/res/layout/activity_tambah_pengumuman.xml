<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pengumuman.TambahPengumuman">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="60dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/background_tambah"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/tambah_pengumuman"
                android:textColor="@color/hitam"
                android:gravity="center"
                style="@style/TextAppearance.MaterialComponents.Headline4"/>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_height="2dp"
                android:background="@color/hitam" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="84dp"
                android:layout_marginHorizontal="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTambahJudulPengumuman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/judul_pengumuman"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTambahDeskripsiPengumuman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/deskripsi_pengumuman"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddPengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="48dp"
                android:layout_marginTop="48dp"
                android:text="@string/submit"
                android:textColor="@color/hitam"
                android:backgroundTint="#E5E5E5"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKembaliTambahPengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="28dp"
                android:text="@string/kembali"
                android:textColor="@color/hitam"
                android:backgroundTint="@color/pink"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>